<%- include("partials/header"); -%>

<h1> Compose </h1>

<form class="" action="/compose" method="post">
    

    <div class="form-group mb-4">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" class="form-control">
    </div>

    <div class="form-group mb-4">
        <label for="postContent">Post</label>
        <textarea id="postContent" name="postContent" rows="4" cols="50" class="form-control"></textarea>
    </div>

    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

